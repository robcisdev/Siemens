    <!-- Hidden template container for PDF generation -->
    <div id="pdf-template-container"></div>
    
    <script>
        // Dark mode toggle
        const darkModeToggle = document.getElementById('dark-mode-toggle');
        
        // Check for dark mode preference
        if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
            document.documentElement.classList.add('dark');
        }
        
        // Listen for changes to color scheme preference
        window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', event => {
            if (event.matches) {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
        });
        
        // Dark mode toggle button
        darkModeToggle.addEventListener('click', () => {
            document.documentElement.classList.toggle('dark');
        });

        // Check if dark mode is enabled
        function isDarkMode() {
            return document.documentElement.classList.contains('dark');
        }

        // Create a visual clone of the card for PDF generation
        function createCardClone(card, forPDF) {
            const clone = card.cloneNode(true);
            
            // Apply styles based on dark mode if needed
            if (isDarkMode() && forPDF) {
                clone.style.backgroundColor = '#222222';
                clone.style.color = '#f5f5f5';
                
                // Make sure question number stands out
                const numberBadge = clone.querySelector('.rounded-full');
                if (numberBadge) {
                    numberBadge.style.backgroundColor = '#009999';
                    numberBadge.style.color = 'white';
                }
                
                // Fix heading color
                const heading = clone.querySelector('h3');
                if (heading) {
                    heading.style.color = '#f5f5f5';
                }
                
                // Fix text color
                const textElements = clone.querySelectorAll('p, li');
                textElements.forEach(el => {
                    el.style.color = '#dddddd';
                });
                
                // Fix highlight colors
                const highlights = clone.querySelectorAll('.highlight');
                highlights.forEach(el => {
                    el.style.color = '#00b3b3';
                });
                
                // Fix icon background
                const iconContainer = clone.querySelector('.feature-icon');
                if (iconContainer) {
                    iconContainer.style.backgroundColor = 'rgba(0, 153, 153, 0.2)';
                    iconContainer.style.color = '#00b3b3';
                }
            } else if (forPDF) {
                // Light mode styling for PDF
                clone.style.backgroundColor = '#ffffff';
                clone.style.color = '#333333';
                
                // Make sure question number stands out
                const numberBadge = clone.querySelector('.rounded-full');
                if (numberBadge) {
                    numberBadge.style.backgroundColor = '#009999';
                    numberBadge.style.color = 'white';
                }
                
                // Fix heading color
                const heading = clone.querySelector('h3');
                if (heading) {
                    heading.style.color = '#333333';
                }
                
                // Fix text color
                const textElements = clone.querySelectorAll('p, li');
                textElements.forEach(el => {
                    el.style.color = '#333333';
                });
                
                // Fix highlight colors
                const highlights = clone.querySelectorAll('.highlight');
                highlights.forEach(el => {
                    el.style.color = '#009999';
                });
                
                // Fix icon background
                const iconContainer = clone.querySelector('.feature-icon');
                if (iconContainer) {
                    iconContainer.style.backgroundColor = 'rgba(0, 153, 153, 0.1)';
                    iconContainer.style.color = '#009999';
                }
            }
            
            return clone;
        }

        // Save as PDF functionality
        document.getElementById('save-pdf-button').addEventListener('click', async () => {
            // Show loading overlay
            const loadingOverlay = document.createElement('div');
            loadingOverlay.className = 'loading-overlay';
            loadingOverlay.innerHTML = `
                <div class="loading-spinner"></div>
                <p class="text-xl mb-2">Generating PDF...</p>
                <p>This may take a moment</p>
            `;
            document.body.appendChild(loadingOverlay);
            
            try {
                // Get all cards
                const cards = document.querySelectorAll('.card');
                
                // Access jsPDF
                const { jsPDF } = window.jspdf;
                
                // Create a new PDF document
                const pdf = new jsPDF({
                    orientation: 'portrait',
                    unit: 'mm',
                    format: 'a4'
                });
                
                // Add title page
                pdf.setFillColor(isDarkMode() ? '#151515' : '#ffffff');
                pdf.rect(0, 0, 210, 297, 'F');
                
                pdf.setFontSize(28);
                pdf.setTextColor(isDarkMode() ? '#00b3b3' : '#009999');
                pdf.text('Siemens Roundtable Q&A', 105, 80, { align: 'center' });
                
                pdf.setFontSize(16);
                pdf.setTextColor(isDarkMode() ? '#dddddd' : '#555555');
                pdf.text('May 6th, 2025', 105, 100, { align: 'center' });
                pdf.text('Siemens "Mitras" Factory, Nuevo Le√≥n', 105, 110, { align: 'center' });
                
                // Add Siemens logo or placeholder
                pdf.setFillColor(isDarkMode() ? '#00b3b3' : '#009999');
                pdf.rect(85, 130, 40, 40, 'F');
                
                // Add generation date
                pdf.setFontSize(10);
                pdf.setTextColor(isDarkMode() ? '#999999' : '#777777');
                const today = new Date();
                pdf.text(`Generated: ${today.toLocaleDateString()}`, 105, 280, { align: 'center' });
                
                // Use html2canvas to capture card images for the PDF
                // Process cards in pairs (or individually for full-width cards)
                let pageNum = 2; // Start page count after title page
                
                for (let i = 0; i < cards.length; i += 2) {
                    // Check if we need a new page
                    if (i > 0) {
                        pdf.addPage();
                    }
                    
                    // Set page background color
                    pdf.setFillColor(isDarkMode() ? '#151515' : '#ffffff');
                    pdf.rect(0, 0, 210, 297, 'F');
                    
                    // Add page number
                    pdf.setFontSize(10);
                    pdf.setTextColor(isDarkMode() ? '#999999' : '#777777');
                    pdf.text(`Page ${pageNum}`, 190, 287, { align: 'right' });
                    pageNum++;
                    
                    const card1 = cards[i];
                    const isCard1Wide = card1.classList.contains('md:col-span-2');
                    
                    // Handle case where first card is wide (takes full page)
                    if (isCard1Wide) {
                        await processSingleCard(card1, pdf, 20);
                        continue;
                    }
                    
                    // Handle the first card of the pair
                    await processSingleCard(card1, pdf, 20);
                    
                    // Check if there's a second card to process
                    if (i + 1 < cards.length) {
                        const card2 = cards[i + 1];
                        const isCard2Wide = card2.classList.contains('md:col-span-2');
                        
                        // If second card is wide, it gets its own page
                        if (isCard2Wide) {
                            pdf.addPage();
                            
                            // Set page background color
                            pdf.setFillColor(isDarkMode() ? '#151515' : '#ffffff');
                            pdf.rect(0, 0, 210, 297, 'F');
                            
                            // Add page number
                            pdf.setFontSize(10);
                            pdf.setTextColor(isDarkMode() ? '#999999' : '#777777');
                            pdf.text(`Page ${pageNum}`, 190, 287, { align: 'right' });
                            pageNum++;
                            
                            await processSingleCard(card2, pdf, 20);
                            i++; // Skip this card in next iteration
                        } else {
                            // Process second card normally
                            await processSingleCard(card2, pdf, 155);
                            i++; // Skip this card in next iteration
                        }
                    }
                }
                
                // Save the PDF
                pdf.save('Siemens_Roundtable_QA.pdf');
                
                // Remove loading overlay
                document.body.removeChild(loadingOverlay);
                
                // Show success message
                const successToast = document.createElement('div');
                successToast.className = 'fixed bottom-8 left-1/2 transform -translate-x-1/2 bg-green-600 text-white px-6 py-3 rounded-xl shadow-lg z-50';
                successToast.innerHTML = 'PDF successfully generated!';
                document.body.appendChild(successToast);
                
                // Remove success message after 3 seconds
                setTimeout(() => {
                    document.body.removeChild(successToast);
                }, 3000);
                
            } catch (error) {
                console.error('Error generating PDF:', error);
                
                // Remove loading overlay
                document.body.removeChild(loadingOverlay);
                
                // Show error message
                const errorToast = document.createElement('div');
                errorToast.className = 'fixed bottom-8 left-1/2 transform -translate-x-1/2 bg-red-600 text-white px-6 py-3 rounded-xl shadow-lg z-50';
                errorToast.innerHTML = `Error generating PDF: ${error.message}`;
                document.body.appendChild(errorToast);
                
                // Remove error message after 5 seconds
                setTimeout(() => {
                    document.body.removeChild(errorToast);
                }, 5000);
            }
        });
        
        // Process a single card for PDF
        async function processSingleCard(card, pdf, yPosition) {
            try {
                // Get card data
                const questionNumber = card.getAttribute('data-number');
                const questionTitle = card.querySelector('h3').textContent.trim();
                const isWideCard = card.classList.contains('md:col-span-2');
                
                // Create a visual clone of the card with styling for PDF
                const templateContainer = document.getElementById('pdf-template-container');
                templateContainer.innerHTML = '';
                
                // Create a div to hold the cloned card
                const cardWrapper = document.createElement('div');
                cardWrapper.style.width = '170mm';
                cardWrapper.style.margin = '0 auto';
                cardWrapper.style.padding = '0';
                cardWrapper.style.position = 'relative';
                
                // Create a cloned card with the right styling
                const cardClone = createCardClone(card, true);
                cardClone.style.position = 'relative';
                cardClone.style.width = '100%';
                cardClone.style.margin = '0';
                cardClone.style.boxShadow = isDarkMode() ? '0 4px 6px rgba(0, 0, 0, 0.5)' : '0 4px 6px rgba(0, 0, 0, 0.1)';
                
                // Add to wrapper
                cardWrapper.appendChild(cardClone);
                templateContainer.appendChild(cardWrapper);
                
                // Use html2canvas to capture the card as an image
                const cardImage = await html2canvas(cardClone, {
                    scale: 2, // Higher quality
                    logging: false,
                    backgroundColor: null, // Transparent
                    useCORS: true
                });
                
                // Calculate dimensions
                const cardWidth = isWideCard ? 170 : 170; // mm (PDF width)
                const cardHeight = cardWidth * cardImage.height / cardImage.width;
                
                // Add card image to PDF
                const cardDataUrl = cardImage.toDataURL('image/png');
                pdf.addImage(cardDataUrl, 'PNG', 20, yPosition, cardWidth, cardHeight);
                
                // Clean up
                templateContainer.innerHTML = '';
                
            } catch (err) {
                console.error('Error processing card:', err);
                throw err;
            }
        }

        // Search functionality
        document.getElementById('search-input').addEventListener('input', function() {
            const searchText = this.value.toLowerCase();
            const cards = document.querySelectorAll('.card');
            const sections = document.querySelectorAll('h2.text-2xl');
            
            // Only search if we have at least 2 characters
            if (searchText.length < 2 && searchText.length > 0) {
                return;
            }
            
            let hasMatches = false;
            
            cards.forEach(card => {
                const cardContent = card.getAttribute('data-content').toLowerCase();
                const cardTitle = card.querySelector('h3').textContent.toLowerCase();
                
                if (searchText.length === 0 || cardContent.includes(searchText) || cardTitle.includes(searchText)) {
                    card.style.display = '';
                    card.style.opacity = '1';
                    hasMatches = true;
                    
                    // Highlight matching text if searching
                    if (searchText.length > 0) {
                        card.style.boxShadow = '0 0 0 2px #009999';
                    } else {
                        card.style.boxShadow = '';
                    }
                } else {
                    card.style.opacity = '0.3';
                }
            });
            
            // Show sections based on search results
            sections.forEach(section => {
                section.parentElement.style.display = searchText.length === 0 ? 'block' : 'none';
            });
            
            if (searchText.length > 0 && hasMatches) {
                const resultsSection = document.getElementById('search-results') || createSearchResultsSection();
                resultsSection.style.display = 'block';
                
                // Move matching cards to results section
                const resultsContainer = resultsSection.querySelector('.search-results-container');
                resultsContainer.innerHTML = '';
                
                cards.forEach(card => {
                    if (card.style.opacity !== '0.3') {
                        const clone = card.cloneNode(true);
                        clone.style.display = 'block';
                        resultsContainer.appendChild(clone);
                    }
                });
            } else if (document.getElementById('search-results')) {
                document.getElementById('search-results').style.display = 'none';
            }
        });
        
        function createSearchResultsSection() {
            const searchResultsSection = document.createElement('div');
            searchResultsSection.id = 'search-results';
            searchResultsSection.className = 'mb-8';
            searchResultsSection.innerHTML = `
                <h2 class="text-2xl font-bold mb-6 text-siemens">Search Results</h2>
                <div class="search-results-container grid grid-cols-1 md:grid-cols-2 gap-6"></div>
            `;
            
            const allContent = document.getElementById('all-content');
            allContent.insertBefore(searchResultsSection, allContent.firstChild);
            
            return searchResultsSection;
        }
    </script>


</body></html>
